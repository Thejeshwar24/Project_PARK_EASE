<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"
        />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARK EASE"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginTop="-150dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/head1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:text="Why Park Ease System?"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Park Ease is economical in terms of time, personnel and cost, but it provides maximum benefit in optimization of high capacity parking areas."
                android:textColor="#5D3FD3"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/head3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Low Cost!"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/head4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Park Ease system significantly reduces the costs required to manage traffic in the car park correctly."
                android:textColor="#5D3FD3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/head5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Time Saving!"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/head6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Reduces the mobility of the drivers in the parking lot, eliminating the time loss while searching for empty parking spaces!"
                android:textColor="#5D3FD3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/backButton"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="back5"
                android:text="Back"/>

        </LinearLayout>

    </GridLayout>

</RelativeLayout>